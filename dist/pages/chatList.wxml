
<view class="chat-wrap">
    <view class="list-item" hover-class="view-hover" style="margin-top: 20rpx;" bindtap="showAlert">
        <view class="list-left">
            <image src="../image/systemHeader.png" mode="aspectFill"/>
            <!-- <text class="unread-num"></text> -->
        </view>
        <view class="list-right">
            <view class="msg-title" style="color:#40c4ff;">
                国王官方公告通知<text class="msg-time"/>
            </view>
            <view class="msg-cont">系统更新</view>
        </view>
    </view>
    <view class="list-item" hover-class="view-hover" style="margin: 10rpx 0 20rpx;" bindtap="toInterest">
        <view class="list-left">
            <image src="../image/intrestHeader.png" mode="aspectFill"/>
            <text class="unread-num"  wx:if="{{intre.noReadCount!=0}}">{{intre.noReadCount}}</text>
        </view>
        <view class="list-right">
            <view class="msg-title" style="color:#40c4ff;">
                对我感兴趣<text class="msg-time"  wx:if="{{intre.companyCount!=0}}">{{intre.companyCount}}家</text>
            </view>
            <view class="msg-cont" wx:if="{{intre.companyName==''}}">与对您感兴趣的公司沟通,更容易获得职位呦！</view>
            <view class="msg-cont" wx:if="{{intre.companyName!=''}}">{{intre.companyName}} 刚刚收藏了我的简历</view>
        </view>
    </view>
    <view class="list-wrap top">
        <view class="list-item" hover-class="view-hover" wx:for="{{topList}}" wx:key="{{index}}" bindtouchstart="slideStart" bindtouchmove="slideMove" bindtap="toChat" data-wepy-params-a="1" data-wepy-params-b="{{index}}" data-wepy-params-c="{{item}}">
            <view class="slide-wrap {{slideId==item._id?'wrap-active':''}}">
                <view class="list-left">
                    <image src="{{item.chatUserHeaderImage}}" hover-stop-propagation="hover-stop-propagation" catchtap="toCompany" mode="aspectFill" data-wepy-params-a="{{item.chatUserId}}"/>
                    <text class="unread-num" wx:if="{{item.nr!=0}}">{{item.nr}}</text>
                </view>
                <view class="list-right">
                    <view class="msg-title" style="color:#707070;">
                        {{item.chatUserName}}<text class="msg-time">{{item.time}}</text>
                    </view>
                    <view class="msg-cont">{{item.c}}</view>
                </view>
            </view>
            <view class="slide first {{slideId==item._id?'first-active':''}}" hover-stop-propagation="hover-stop-propagation" catchtap="upTop" data-wepy-params-a="1" data-wepy-params-b="{{index}}" data-wepy-params-c="{{item}}">取消置顶</view>
            <view class="slide second {{slideId==item._id?'second-active':''}}" hover-stop-propagation="hover-stop-propagation" bindtap="removeItem" data-wepy-params-a="1" data-wepy-params-b="{{index}}" data-wepy-params-c="{{item}}">删除</view>
        </view>
    </view>
    <view class="list-wrap">
        <view class="list-item" hover-class="view-hover" wx:for="{{list}}" wx:key="{{index}}" bindtouchstart="slideStart" bindtouchmove="slideMove" bindtap="toChat" data-wepy-params-a="0" data-wepy-params-b="{{index}}" data-wepy-params-c="{{item}}">
            <view class="slide-wrap {{slideId==item._id?'wrap-active':''}}">
                <view class="list-left">
                    <image src="{{item.chatUserHeaderImage}}" hover-stop-propagation="hover-stop-propagation" catchtap="toCompany" mode="aspectFill" data-wepy-params-a="{{item.chatUserId}}"/>
                    <text class="unread-num" wx:if="{{item.nr!=0}}">{{item.nr}}</text>
                </view>
                <view class="list-right">
                    <view class="msg-title" style="color:#707070;">
                        {{item.chatUserName}}<text class="msg-time">{{item.time}}</text>
                    </view>
                    <text class="msg-cont">{{item.c}}</text>
                </view>
            </view>
            <view class="slide first {{slideId==item._id?'first-active':''}}" hover-stop-propagation="hover-stop-propagation" catchtap="upTop" data-wepy-params-a="0" data-wepy-params-b="{{index}}" data-wepy-params-c="{{item}}">置顶消息</view>
            <view class="slide second {{slideId==item._id?'second-active':''}}" hover-stop-propagation="hover-stop-propagation" catchtap="removeItem" data-wepy-params-a="0" data-wepy-params-b="{{index}}" data-wepy-params-c="{{item}}">删除</view>
        </view>
    </view>
</view>

<view class="toast-wrap" hidden="{{$toast$hide}}" style="top:{{$toast$top}}px">{{$toast$content}}</view>
