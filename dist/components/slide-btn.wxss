.slide-wrap{width:100%;height:110rpx;align-items:center;position:relative;overflow:hidden;border-bottom:1px solid #f2f2f5}.slide-wrap .text{width:100%;height:100%;will-change:auto;transform:translateZ(0);transition:transform 200ms linear;align-items:center;padding:0 40rpx;justify-content:space-between}.slide-wrap .text-slide{transform:translate3d(-240rpx, 0, 0)}.slide-wrap .slide-btn{position:absolute;top:0;right:0;width:120rpx;height:100%;will-change:auto;transform:translate3d(100%, 0, 0);transition:transform 200ms linear;color:#fff;align-items:center;justify-content:center}.slide-wrap .slide-first{background-color:#40c4ff}.slide-wrap .slide-second{background-color:#ddd}.slide-wrap .first-slide{transform:translate3d(-100%, 0, 0)}.slide-wrap .second-slide{transform:translate3d(0, 0, 0)}